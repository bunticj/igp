{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Promotion Service API",
    "description": "Swagger documentation for Promotion Service API"
  },
  "components": {
    "schemas": {
      "user": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "username": {
            "type": "string",
            "example": "def-admin"
          },
          "role": {
            "type": "string",
            "example": "admin"
          },
          "balance": {
            "type": "decimal",
            "example": 629.0
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-03-20T12:51:03.857Z"
          }
        },
        "required": ["id", "username", "role", "balance", "createdAt"]
      },
      "promotion": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 25
          },
          "title": {
            "type": "string",
            "example": "Test"
          },
          "description": {
            "type": "string",
            "example": "string"
          },
          "amount": {
            "type": "number",
            "example": 55
          },
          "isActive": {
            "type": "boolean",
            "example": true
          },
          "startDate": {
            "type": "string",
            "format": "date-time",
            "example": "2025-03-20T10:44:55.926Z"
          },
          "endDate": {
            "type": "string",
            "format": "date-time",
            "example": "2025-03-24T10:44:55.926Z"
          }
        },
        "required": ["id", "title", "description", "amount", "isActive", "startDate", "endDate"]
      },
      "userPromotion": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer",
            "example": 1
          },
          "promotionId": {
            "type": "integer",
            "example": 25
          },
          "claimedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-03-20T15:18:14.932Z"
          },
          "promotion": {
            "$ref": "#/components/schemas/promotion"
          }
        }
      },
      "claimPromotionResponse": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/user"
          }
        }
      },
      "claimAllPromotionResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "user": {
                "$ref": "#/components/schemas/user"
              },
              "userProms": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/userPromotion"
                }
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/api/v1/admin/promotion": {
      "post": {
        "tags": ["Promotion"],
        "summary": "Create a new promotion (admin only)",
        "responses": {
          "200": {
            "description": "Promotion created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "recipients": {
                          "type": "array",
                          "items": {
                            "type": "integer",
                            "example": 1
                          }
                        },
                        "promotion": {
                          "$ref": "#/components/schemas/promotion"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuthSchema": []
          }
        ]
      }
    },
    "/api/v1/promotion": {
      "get": {
        "tags": ["Promotion"],
        "summary": "Get all promotions for the user",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number for pagination",
            "required": false,
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "size",
            "in": "query",
            "description": "Number of promotions per page",
            "required": false,
            "schema": {
              "type": "integer",
              "example": 10
            }
          },
          {
            "name": "isClaimed",
            "in": "query",
            "description": "Filter by claimed promotions",
            "required": false,
            "schema": {
              "type": "boolean",
              "example": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of promotions for the user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "pagination": {
                          "type": "object",
                          "properties": {
                            "totalItems": {
                              "type": "integer",
                              "example": 23
                            },
                            "totalPages": {
                              "type": "integer",
                              "example": 12
                            },
                            "currentPage": {
                              "type": "integer",
                              "example": 1
                            },
                            "limit": {
                              "type": "integer",
                              "example": 2
                            }
                          }
                        },
                        "data": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/userPromotion"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/promotion/claim": {
      "post": {
        "tags": ["Promotion"],
        "summary": "Claim a promotion for a user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "promotionId": {
                    "type": "integer",
                    "example": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Promotion claimed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/claimPromotionResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/promotion/claim-all": {
      "post": {
        "tags": ["Promotion"],
        "summary": "Claim all available promotions for the user",
        "responses": {
          "200": {
            "description": "All promotions claimed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/claimAllPromotionResponse"
                }
              }
            }
          }
        }
      }
    }
  }
}
